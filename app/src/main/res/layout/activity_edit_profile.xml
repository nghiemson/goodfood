<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/my_avatar"
        android:layout_centerHorizontal="true"
        android:id="@+id/edit_avatar"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile Picture"
        android:layout_below="@id/edit_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv_edit_avatar"/>
    <TextView
        android:id="@+id/fullname"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_edit_avatar"
        android:text="Full Name"/>
    <EditText
        android:id="@+id/et_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"

        android:layout_below="@id/fullname"
        />
    <TextView
        android:id="@+id/email"
        android:layout_below="@id/et_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/et_email"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        />


    <TextView
        android:id="@+id/addss"
        android:layout_below="@id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addss"
        android:layout_marginBottom="32dp"/>
    <Button
        android:id="@+id/btn_edit"
        android:layout_below="@id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:background="@drawable/button_visible_background"
        android:layout_marginVertical="10dp"
        />

</RelativeLayout>