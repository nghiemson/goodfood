<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="32dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <TextView
        android:id="@+id/txt_info_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Info"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/image_close_dialog_info"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txt_serving_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serving Time (Â±)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_info_tittle"
        android:layout_marginTop="32dp"/>
    <EditText
        android:id="@+id/et_serving_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_serving_time"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/txt_nutrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition facts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_serving_time"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/et_nutrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_nutrition"
        android:inputType="text|textMultiLine"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/txt_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nutrition"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/et_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_tags"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/btn_save_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_visible_background"
        android:text="Save Info"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_tags"
        android:textColor="@android:color/white"
        android:textAllCaps="false" />


</androidx.constraintlayout.widget.ConstraintLayout>