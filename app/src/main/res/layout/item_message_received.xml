<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_message_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/my_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/txt_message_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message asdk basdb adbna avdsvasd  "
        android:background="@drawable/button_invisible_background"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:maxWidth="240dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/img_message_profile"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>