<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_chat_log"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_chat"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/my_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_profile_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@id/img_profile_chat"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img_profile_chat"
        app:layout_constraintTop_toBottomOf="@id/txt_profile_chat"
        android:layout_marginLeft="16dp"
        android:text="Message"/>

</androidx.constraintlayout.widget.ConstraintLayout>